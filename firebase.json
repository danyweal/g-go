{
  "hosting": [
    {
      "site": "pcnw-app",
      "source": ".",
      "frameworksBackend": { "region": "us-central1" },
      "ignore": ["firebase.json","**/.*","**/node_modules/**","pcnw-app-*.json"],
      "headers": [
        { "source": "/_next/static/**", "headers":[{"key":"Cache-Control","value":"public, max-age=31536000, immutable"}]},
        { "source": "/**/*.{png,jpg,jpeg,svg,gif,webp,ico,css,js,woff,woff2,ttf}", "headers":[{"key":"Cache-Control","value":"public, max-age=31536000"}]},
        { "source": "/**", "headers":[
          {"key":"X-Content-Type-Options","value":"nosniff"},
          {"key":"Referrer-Policy","value":"strict-origin-when-cross-origin"}
        ]}
      ],
      "redirects": [{ "source": "/favicon.ico", "destination": "/favicon.png", "type": 301 }]
    }
  ],
  "functions": { "source": "functions", "runtime": "nodejs20", "region": "us-central1" },
  "firestore": { "database": "(default)", "location": "nam5", "rules": "firestore.rules", "indexes": "firestore.indexes.json" },
  "storage": { "rules": "storage.rules" },
  "emulators": { "singleProjectMode": true, "hosting": {"port":5000}, "functions":{"port":5001}, "firestore":{"port":8080}, "storage":{"port":9199}, "ui":{"enabled":true} }
}
