rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Media uploaded by users:
    match /media/{userId}/{allPaths=**} {
      // Anyone can read gallery media (adjust if needed).
      allow read: if true;

      // Only the authenticated owner can write to their own folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Everything else is denied by default.
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
